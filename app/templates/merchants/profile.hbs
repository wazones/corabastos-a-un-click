<div class="container container-register-merchant background2">
  <ul class="list-group">
    <li class="list-group-item">
      <button type="button" class="btn btn-success button-save">Guardar</button>
    </li>
    <li class="list-group-item">
      <img src="images/comerciante.png" class="img-circle profile-picture">
    </li>
    <li class="list-group-item">
      <!-- Username -->
      <div class="form-group">
        <label>Nombre de usuario</label>
        <input type="text" class="form-control" readonly="true" value="{{merchant.user}}">
      </div>
      <!-- Phone number -->
      <div class="form-group">
        <label>Tel√©fono</label>
        <input type="text" class="form-control" readonly="true" value="{{merchant.phone}}">
      </div>
    </li>

    <li class="list-group-item">
      <a href="/#stores/new" class="btn btn-primary btn-lg btn-group-justified">
        + Agregar Local
      </a>
    </li>
    <li class="list-group-item">
      <a href="/#offers/new" class="btn btn-primary btn-lg btn-group-justified">
        + Agregar Oferta
      </a>
    </li>

    {{#each merchant.stores}}
    <li class="list-group-item center-text">
      <a href="#/stores/{{id}}" class="">
      <h1>Local: {{id}}</h1>
      </a>
    </li>
    {{/each}}
  </ul>
</div>